# VLM Configuration (Vision Language Model)
# For OpenRouter, use: https://openrouter.ai/api/v1
# For other providers, set your provider's base URL
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=sk-xxx
VLM_MODEL=gpt-4o-mini

# Jina Embeddings API
JINA_API_KEY=jina_xxx

# MinIO Configuration (Legacy - for backward compatibility)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_USE_SSL=false
# MINIO_BUCKET=memes

# Universal Storage Configuration (supports MinIO, Cloudflare R2, AWS S3)
# When STORAGE_ENDPOINT is set, it takes priority over MINIO_* settings
STORAGE_TYPE=r2                                    # minio, r2, s3
STORAGE_ENDPOINT=xxx.r2.cloudflarestorage.com      # S3 API endpoint
STORAGE_ACCESS_KEY=xxx                             # Access key ID
STORAGE_SECRET_KEY=xxx                             # Secret access key
STORAGE_USE_SSL=true                               # Use HTTPS
STORAGE_BUCKET=memes                               # Bucket name
STORAGE_REGION=auto                                # R2: "auto", S3: your region
STORAGE_PUBLIC_URL=https://pub-xxx.r2.dev          # Public URL for R2.dev or CDN

# Qdrant Configuration
# Local Qdrant (default, no authentication)
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_COLLECTION=emomo                            # Collection name (default: emomo)

# Qdrant Cloud (TLS + API Key authentication)
# Uncomment and configure below for Qdrant Cloud
# QDRANT_HOST=your-cluster-id.region.aws.cloud.qdrant.io
# QDRANT_PORT=6334
# QDRANT_COLLECTION=emomo                           # Collection name
# QDRANT_API_KEY=your-qdrant-api-key
# QDRANT_USE_TLS=true  # Optional, auto-enabled when API_KEY is set

# Database Configuration
# Common settings
DATABASE_DRIVER=postgres                             # sqlite or postgres
# DATABASE_PATH=./data/memes.db                      # Only for sqlite

# PostgreSQL settings (uncomment if using postgres)
# DATABASE_URL=postgresql://user:password@host:port/dbname
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_DBNAME=emomo
DATABASE_SSLMODE=disable

# Database Connection Pool (works for both drivers)
DATABASE_MAX_IDLE_CONNS=10
DATABASE_MAX_OPEN_CONNS=100
DATABASE_CONN_MAX_LIFETIME=1h

# Server
SERVER_PORT=8080
